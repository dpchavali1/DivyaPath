<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:padding="16dp" android:text="Watch live darshan from major temples across India"
        android:textSize="14sp" android:textColor="?attr/colorOnSurfaceVariant"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_live_temples"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="12dp" android:clipToPadding="false"/>
</LinearLayout>
