<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="8dp" app:cardCornerRadius="12dp" app:cardElevation="2dp" app:strokeWidth="0dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
        <ImageView android:id="@+id/iv_bhajan_icon"
            android:layout_width="56dp" android:layout_height="56dp"
            android:src="@drawable/ic_om_symbol" android:background="@drawable/bg_circle_saffron"
            android:scaleType="centerCrop" android:clipToOutline="true"
            android:contentDescription="Bhajan icon"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
            <TextView android:id="@+id/tv_bhajan_title" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="16sp" android:textColor="?attr/colorOnSurface" android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/tv_bhajan_title_hindi" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="14sp" android:textColor="@color/saffron_primary"/>
            <TextView android:id="@+id/tv_bhajan_category" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="4dp" android:textSize="11sp" android:textColor="@color/white"
                android:background="@drawable/bg_circle_saffron" android:paddingHorizontal="8dp" android:paddingVertical="2dp"/>
        </LinearLayout>
        <ImageButton android:id="@+id/btn_bhajan_play"
            android:layout_width="40dp" android:layout_height="40dp"
            android:src="@drawable/ic_play" android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play" app:tint="@color/saffron_primary"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
