<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="?attr/colorSurface">
    <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar_chalisa"
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        app:title="Chalisa Sangrah" app:titleTextColor="@color/white"
        android:background="@color/saffron_primary" app:navigationIcon="@drawable/ic_back" app:navigationIconTint="@color/white"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp" android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp" app:cardElevation="1dp" app:strokeWidth="0dp">
        <androidx.appcompat.widget.SearchView android:id="@+id/search_chalisa"
            android:layout_width="match_parent" android:layout_height="44dp"
            app:queryHint="Search Chalisa..."
            app:iconifiedByDefault="false"
            app:searchIcon="@drawable/ic_search"/>
    </com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_chalisa_list"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp" android:clipToPadding="false"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_banner_chalisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-4962910048695842/2672343176"/>
</LinearLayout>
