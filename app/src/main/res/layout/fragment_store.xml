<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_store"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Devotional Store"
        app:titleTextColor="@color/white"
        android:background="@color/saffron_primary"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                style="@style/Widget.Material3.Chip.Filter"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_incense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incense"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_diyas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diyas"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_idols"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idols"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_puja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puja Thali"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rudraksha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rudraksha"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_camphor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camphor"
                style="@style/Widget.Material3.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:clipToPadding="false" />
</LinearLayout>
