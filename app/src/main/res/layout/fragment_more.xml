<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="?attr/colorSurface">
    <com.google.android.material.appbar.MaterialToolbar android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        app:title="More" app:titleTextColor="@color/white" android:background="@color/saffron_primary"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_japa"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_maala" android:contentDescription="Japa"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="Japa Counter" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="Count mantras bead by bead" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_puja"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_kalash" android:contentDescription="Puja"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Guided Puja" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_chalisa"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_chalisa" android:contentDescription="Chalisa"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Chalisa Sangrah" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_shraddha"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_om_symbol" android:contentDescription="Shraddha"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Shraddha Calendar" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_darshan"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_temple" android:contentDescription="Darshan"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Temple Darshan" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_seva"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_lotus" android:contentDescription="Seva"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Daily Seva" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_wallpaper"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_lotus" android:contentDescription="Wallpapers"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Wallpapers" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_astrology"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_om_symbol" android:contentDescription="Astrology"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Daily Rashifal" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_pandit"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_kalash" android:contentDescription="Pandit"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Book a Pandit" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_bhajan"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_om_symbol" android:contentDescription="Bhajan"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Bhajan Sangrah" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_stotra"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_om_symbol" android:contentDescription="Stotra"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Stotra Sangrah" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_store"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_store" android:contentDescription="Store"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Devotional Store" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_settings"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_settings" android:contentDescription="Settings"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="Settings" android:textSize="16sp" android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
