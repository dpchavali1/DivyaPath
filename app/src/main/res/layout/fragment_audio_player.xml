<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_player"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Now Playing"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Deity Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="240dp"
                android:layout_height="240dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/player_deity_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_om_symbol"
                    android:background="@color/saffron_50"
                    android:padding="40dp"
                    android:contentDescription="Deity image" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Track Title -->
            <TextView
                android:id="@+id/player_track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Track Title"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Deity / Subtitle -->
            <TextView
                android:id="@+id/player_track_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Deity Name"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <!-- Audio Source Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/player_chip_source"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:text="HD"
                android:textSize="11sp"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/abhijit_green"
                app:chipMinHeight="24dp"
                app:chipCornerRadius="12dp"
                android:visibility="gone" />

            <!-- Scrollable Lyrics Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/player_lyrics_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lyrics"
                        android:textColor="@color/saffron_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/player_lyrics_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:maxHeight="200dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Seekbar Section -->
            <com.google.android.material.slider.Slider
                android:id="@+id/player_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:valueFrom="0"
                android:valueTo="100"
                app:thumbColor="@color/saffron_primary"
                app:trackColorActive="@color/saffron_primary"
                app:trackColorInactive="@color/saffron_100" />

            <!-- Time labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/player_current_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/player_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Main Controls Row: repeat / prev / play FAB / next / shuffle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/player_btn_repeat"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Repeat"
                    android:src="@drawable/ic_repeat"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/player_btn_prev"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous"
                    android:src="@drawable/ic_skip_previous"
                    app:tint="@color/text_primary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/player_fab_play_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Play/Pause"
                    android:src="@drawable/ic_play"
                    app:backgroundTint="@color/saffron_primary"
                    app:fabSize="normal"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/player_btn_next"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next"
                    android:src="@drawable/ic_skip_next"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/player_btn_shuffle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Shuffle"
                    android:src="@drawable/ic_shuffle"
                    app:tint="@color/text_secondary" />
            </LinearLayout>

            <!-- Secondary Controls: Speed + Sleep Timer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/player_chip_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    app:chipIcon="@drawable/ic_speed"
                    app:chipIconTint="@color/saffron_primary"
                    app:chipBackgroundColor="@color/saffron_50"
                    app:chipStrokeColor="@color/saffron_100"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/player_chip_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Sleep Timer"
                    app:chipIcon="@drawable/ic_timer"
                    app:chipIconTint="@color/saffron_primary"
                    app:chipBackgroundColor="@color/saffron_50"
                    app:chipStrokeColor="@color/saffron_100"
                    app:chipStrokeWidth="1dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
