<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Devotional Wallpapers"
        app:titleTextColor="@color/white"
        android:background="@color/saffron_primary"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white" />

    <!-- Auto Change Wallpaper Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_auto_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto Change Wallpaper"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:id="@+id/layout_auto_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change every:"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_interval_1hr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Hour"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_interval_6hr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Hours"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_interval_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily"
                        android:checked="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_interval_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly"
                        style="@style/Widget.Material3.Chip.Filter" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_ganesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganesh"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_shiva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shiva"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_krishna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krishna"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_hanuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hanuman"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_durga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durga"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_lakshmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lakshmi"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_vishnu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vishnu"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_saraswati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saraswati"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ram"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_wp_temples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temples"
                style="@style/Widget.Material3.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wallpapers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:clipToPadding="false" />
</LinearLayout>
