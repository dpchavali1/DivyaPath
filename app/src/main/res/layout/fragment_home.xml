<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:clipToPadding="false"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Greeting Header with Saffron Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_saffron"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Good Morning Bhakt ðŸ™" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#DDFFFFFF"
                android:textSize="14sp"
                tools:text="Thursday, 20 February 2026" />
        </LinearLayout>

        <!-- Today's Panchang Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_panchang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_panchang"
                        app:tint="@color/saffron" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/todays_panchang"
                        android:textColor="@color/saffron"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_panchang_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textColor="@color/saffron"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Location indicator -->
                <TextView
                    android:id="@+id/tv_panchang_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint"
                    android:drawablePadding="4dp"
                    tools:text="Showing for Mumbai, IST" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/divider" />

                <!-- Panchang Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:useDefaultMargins="true">

                    <!-- Tithi -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tithi"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_tithi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Panchami" />
                    </LinearLayout>

                    <!-- Nakshatra -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nakshatra"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_nakshatra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Rohini" />
                    </LinearLayout>

                    <!-- Sunrise -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunrise"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="06:15 AM" />
                    </LinearLayout>

                    <!-- Sunset -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunset"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="06:30 PM" />
                    </LinearLayout>

                    <!-- Rahukaal (Red) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rahukaal"
                            android:textColor="@color/rahukaal_red"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_rahukaal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/rahukaal_red"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="01:30 - 03:00 PM" />
                    </LinearLayout>

                    <!-- Abhijit Muhurat (Green) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/abhijit_muhurat"
                            android:textColor="@color/abhijit_green"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_abhijit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/abhijit_green"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="11:45 AM - 12:33 PM" />
                    </LinearLayout>

                    <!-- Day -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vara"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_vara"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Thursday" />
                    </LinearLayout>

                    <!-- Yoga -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yoga"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_yoga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Siddhi" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Panchang Insights Section -->
        <LinearLayout
            android:id="@+id/layout_insights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Guidance"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_panchang_insights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <!-- Today's Featured Deity Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_deity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_deity_card"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_deity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/todays_deity"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_deity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_deity_label"
                    tools:text="Lord Vishnu" />

                <TextView
                    android:id="@+id/tv_deity_name_hindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EEFFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_deity_name"
                    tools:text="à¤­à¤—à¤µà¤¾à¤¨ à¤µà¤¿à¤·à¥à¤£à¥" />

                <TextView
                    android:id="@+id/tv_deity_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="80dp"
                    android:textColor="#BBFFFFFF"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_deity_name_hindi"
                    tools:text="The preserver and protector of the universe" />

                <ImageView
                    android:id="@+id/iv_deity"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="Deity Image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Action Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/quick_access"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Aarti Button -->
            <LinearLayout
                android:id="@+id/btn_quick_aarti"
                style="@style/Widget.DivyaPath.QuickAction"
                android:layout_weight="1"
                android:background="@drawable/bg_quick_action">

                <ImageView
                    android:layout_width="@dimen/quick_action_icon_size"
                    android:layout_height="@dimen/quick_action_icon_size"
                    android:padding="8dp"
                    android:background="@drawable/bg_circle_saffron"
                    android:src="@drawable/ic_aarti"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_aarti"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Chalisa Button -->
            <LinearLayout
                android:id="@+id/btn_quick_chalisa"
                style="@style/Widget.DivyaPath.QuickAction"
                android:layout_weight="1"
                android:background="@drawable/bg_quick_action">

                <ImageView
                    android:layout_width="@dimen/quick_action_icon_size"
                    android:layout_height="@dimen/quick_action_icon_size"
                    android:padding="8dp"
                    android:background="@drawable/bg_circle_saffron"
                    android:src="@drawable/ic_chalisa"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_chalisa"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Mantra Button -->
            <LinearLayout
                android:id="@+id/btn_quick_mantra"
                style="@style/Widget.DivyaPath.QuickAction"
                android:layout_weight="1"
                android:background="@drawable/bg_quick_action">

                <ImageView
                    android:layout_width="@dimen/quick_action_icon_size"
                    android:layout_height="@dimen/quick_action_icon_size"
                    android:padding="8dp"
                    android:background="@drawable/bg_circle_saffron"
                    android:src="@drawable/ic_mantra"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_mantra"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Calendar Button -->
            <LinearLayout
                android:id="@+id/btn_quick_calendar"
                style="@style/Widget.DivyaPath.QuickAction"
                android:layout_weight="1"
                android:background="@drawable/bg_quick_action">

                <ImageView
                    android:layout_width="@dimen/quick_action_icon_size"
                    android:layout_height="@dimen/quick_action_icon_size"
                    android:padding="8dp"
                    android:background="@drawable/bg_circle_saffron"
                    android:src="@drawable/ic_panchang"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_calendar"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Today's Festival Card (conditional - shown only on festival days) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_festival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/saffron_50"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/saffron_primary"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_circle_saffron"
                    android:src="@drawable/ic_panchang"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Festival"
                        android:textColor="@color/saffron_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_festival_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Maha Shivaratri" />

                    <TextView
                        android:id="@+id/tv_festival_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="The great night of Lord Shiva" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Festival Countdown Card (shown when festival is within 7 days) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_festival_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/saffron_50"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/saffron_primary"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_countdown_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/saffron_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:text="5 days to Diwali" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Start your 7-day prep journey"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_prep"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Start Prep"
                    android:textSize="12sp"
                    app:backgroundTint="@color/saffron_primary"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Continue Listening Card (shown when audio is playing) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_continue_listening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_continue_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_saffron"
                    android:padding="10dp"
                    android:src="@drawable/ic_play"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue Listening"
                        android:textColor="@color/saffron_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_continue_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="Jai Ganesh Deva" />

                    <TextView
                        android:id="@+id/tv_continue_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="Lord Ganesha" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_continue_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play"
                    android:src="@drawable/ic_play"
                    app:tint="@color/saffron_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Daily Shloka Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_shloka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gold"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shloka_card"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_shloka"
                    android:textColor="@color/deep_maroon"
