<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?attr/colorSurface">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
        android:paddingBottom="32dp">
        <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar_settings"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            app:title="@string/settings_title" app:titleTextColor="@color/white"
            android:background="@color/saffron_primary" app:navigationIcon="@drawable/ic_back" app:navigationIconTint="@color/white"/>

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_margin="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_profile" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView android:text="@string/settings_user_name" android:textSize="14sp" android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
                <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_user_name"
                        android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/settings_user_name_hint"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Voice and Playback Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_devotional_voice" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioGroup android:id="@+id/rg_voice" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <RadioButton android:id="@+id/rb_female" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_voice_female"/>
                    <RadioButton android:id="@+id/rb_male" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_voice_male"/>
                </RadioGroup>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="16dp" android:background="?attr/colorOutlineVariant"/>

                <TextView android:text="@string/settings_aarti_playback" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioGroup android:id="@+id/rg_aarti_playback" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <RadioButton android:id="@+id/rb_playback_auto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_playback_auto"/>
                    <RadioButton android:id="@+id/rb_playback_sing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_playback_sing"/>
                    <RadioButton android:id="@+id/rb_playback_read" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_playback_read"/>
                </RadioGroup>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="16dp" android:background="?attr/colorOutlineVariant"/>

                <TextView android:text="@string/settings_audio_quality" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioGroup android:id="@+id/rg_audio_quality" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <RadioButton android:id="@+id/rb_quality_low" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_quality_low"/>
                    <RadioButton android:id="@+id/rb_quality_medium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_quality_medium"/>
                    <RadioButton android:id="@+id/rb_quality_high" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings_quality_high"/>
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Font Size Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_reading_font_size" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="8dp">
                    <TextView android:text="A" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_font_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:valueFrom="14"
                        android:valueTo="28"
                        android:stepSize="2"
                        app:trackColorActive="@color/saffron_primary"
                        app:thumbColor="@color/saffron_primary" />
                    <TextView android:text="A" android:textSize="24sp" android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView android:id="@+id/tv_font_preview"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_font_preview_text"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Notifications Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_notifications" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="12dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:text="@string/settings_daily_morning_reminder" android:textSize="15sp" android:textColor="?attr/colorOnSurface"/>
                    <com.google.android.material.materialswitch.MaterialSwitch android:id="@+id/switch_notification"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="12dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:text="@string/settings_festival_evening_alerts" android:textSize="15sp" android:textColor="?attr/colorOnSurface"/>
                    <com.google.android.material.materialswitch.MaterialSwitch android:id="@+id/switch_festival"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Panchang Location Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_panchang_location" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"
                    android:text="@string/settings_panchang_location_hint" />

                <!-- Location Mode -->
                <RadioGroup android:id="@+id/rg_location_mode" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" android:orientation="horizontal">
                    <RadioButton android:id="@+id/rb_location_city" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/settings_location_city" android:textSize="13sp"/>
                    <RadioButton android:id="@+id/rb_location_gps" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/settings_location_gps" android:textSize="13sp"/>
                    <RadioButton android:id="@+id/rb_location_manual" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/settings_location_manual" android:textSize="13sp"/>
                </RadioGroup>

                <!-- City Picker (visible when City mode selected) -->
                <LinearLayout android:id="@+id/layout_city_picker" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:layout_marginTop="12dp">

                    <!-- Region Chips -->
                    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="none">
                        <com.google.android.material.chip.ChipGroup android:id="@+id/chip_group_regions"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            app:singleLine="true" app:singleSelection="true"/>
                    </HorizontalScrollView>

                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@android:drawable/ic_menu_search">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_city_search"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:hint="Search any city worldwide..." android:inputType="text" android:maxLines="1"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ProgressBar android:id="@+id/progress_city_search"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:indeterminate="true" android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_cities"
                        android:layout_width="match_parent" android:layout_height="200dp"
                        android:layout_marginTop="4dp" android:nestedScrollingEnabled="true"/>
                </LinearLayout>

                <!-- Manual Coordinates (visible when Manual mode selected) -->
                <LinearLayout android:id="@+id/layout_manual_coords" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:layout_marginTop="12dp" android:visibility="gone">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:layout_marginEnd="8dp" style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_latitude"
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:hint="Latitude" android:inputType="numberDecimal|numberSigned"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_longitude"
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:hint="Longitude" android:inputType="numberDecimal|numberSigned"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton android:id="@+id/btn_apply_coords"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" android:text="@string/settings_apply" android:textSize="13sp"
                        android:backgroundTint="@color/saffron_primary" style="@style/Widget.Material3.Button"/>
                </LinearLayout>

                <!-- Timezone Display -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="12dp" android:background="?attr/colorOutlineVariant"/>
                <TextView android:text="@string/settings_timezone_display" android:textSize="14sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioGroup android:id="@+id/rg_timezone_display" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" android:orientation="horizontal">
                    <RadioButton android:id="@+id/rb_tz_local" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/settings_timezone_local" android:textSize="13sp"/>
                    <RadioButton android:id="@+id/rb_tz_ist" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/settings_timezone_ist" android:textSize="13sp"/>
                    <RadioButton android:id="@+id/rb_tz_device" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/settings_timezone_device" android:textSize="13sp"/>
                </RadioGroup>

                <!-- Location Preview -->
                <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" app:cardCornerRadius="8dp" app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/cream_background" app:strokeWidth="1dp" app:strokeColor="?attr/colorOutlineVariant">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical" android:padding="12dp">
                        <TextView android:id="@+id/tv_location_name" android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:text="@string/settings_location_preview_default" android:textSize="15sp" android:textColor="?attr/colorOnSurface"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView android:id="@+id/tv_location_timezone" android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" android:text="@string/settings_timezone_preview_default" android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:layout_marginTop="8dp">
                            <TextView android:id="@+id/tv_preview_sunrise" android:layout_width="0dp" android:layout_height="wrap_content"
                                android:layout_weight="1" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"
                                android:drawablePadding="4dp" android:text="@string/settings_preview_sunrise_default"/>
                            <TextView android:id="@+id/tv_preview_sunset" android:layout_width="0dp" android:layout_height="wrap_content"
                                android:layout_weight="1" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"
                                android:drawablePadding="4dp" android:text="@string/settings_preview_sunset_default"/>
                        </LinearLayout>
                        <TextView android:id="@+id/tv_preview_rahukaal" android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" android:textSize="12sp" android:textColor="@color/deep_maroon"
                            android:text="@string/settings_preview_rahukaal_default"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Theme Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_theme" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioGroup android:id="@+id/rg_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <RadioButton android:id="@+id/rb_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/theme_light"/>
                    <RadioButton android:id="@+id/rb_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/theme_dark"/>
                    <RadioButton android:id="@+id/rb_saffron" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/theme_saffron"/>
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="16dp">

                <TextView android:text="@string/settings_about_section" android:textSize="16sp" android:textColor="@color/saffron_primary"
                    android:fontFamily="sans-serif-medium" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <LinearLayout android:id="@+id/btn_rate_us"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical"
                    android:paddingVertical="12dp" android:background="?attr/selectableItemBackground">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_om_symbol" android:contentDescription="Rate"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="@string/settings_rate_play_store" android:textSize="15sp"
                        android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant"/>

                <LinearLayout android:id="@+id/btn_share_app"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical"
                    android:paddingVertical="12dp" android:background="?attr/selectableItemBackground">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_om_symbol" android:contentDescription="Share"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="@string/settings_share_with_friends" android:textSize="15sp"
                        android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant"/>

                <LinearLayout android:id="@+id/btn_privacy_policy"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical"
                    android:paddingVertical="12dp" android:background="?attr/selectableItemBackground">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_om_symbol" android:contentDescription="Privacy"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:layout_marginStart="12dp" android:text="@string/settings_privacy" android:textSize="15sp"
                        android:textColor="?attr/colorOnSurface"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" android:contentDescription="Open"/>
                </LinearLayout>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" android:gravity="center"
                    android:text="@string/settings_footer_text" android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
